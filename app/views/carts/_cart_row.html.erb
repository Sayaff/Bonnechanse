<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= cart_item.product.title_en %></h4>
    </div>
    <div class="col-xs-4">

      <%= form_for cart_item do |f| %> <!-- add remote: true -->
        <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency cart_item.product.price_usd %></span></h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.number_field :quantity, value: cart_item.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: cart_item.product.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="btn-group">
              <%= f.submit "Update Quantity", class: "btn btn-primary" %> <!-- add remote: true to the line below -->
              <%= link_to "Delete", cart_item, { data: { confirm: "Are you sure you wish to delete the product '#{cart_item.product.title_en}' from your cart?" }, method: :delete, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
        <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency cart_item.unit_price %></span></h4>
      <% end %>
    </div>

  </div>
</div>
