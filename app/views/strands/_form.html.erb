<%= simple_form_for(@strand, html: { multipart: true }) do |f| %>

    <%= errors_for(@strand) %>

    <%= f.input :title_ru, placeholder: 'Название (русский)' %>

    <%= f.input :title_en, placeholder: 'Title (English)' %>

    <%= f.input :manufacturer %>

    <%= f.input :price_usd, placeholder: 'Price (USD)' %>

    <%= f.input :price_rub, placeholder: 'Цена (рубли)' %>

    <%= f.input :color %>

    <%= f.input :storage_quantity, placeholder: "Storage quantity" %>

    <%= f.input :image, as: :file, :input_html => {id: "pictureInput"} %>

    <%= f.button :submit, :class => 'btn btn-primary' %>

<% end %>
